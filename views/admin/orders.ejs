<section>
  <h2 class="text-2xl font-bold mb-6">Orders</h2>

  <!-- Flash Messages -->
  <% if (success && success.length > 0) { %>
    <div class="bg-green-100 text-green-700 px-4 py-2 rounded mb-4">
      <%= success %>
    </div>
  <% } %>
  <% if (error && error.length > 0) { %>
    <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4">
      <%= error %>
    </div>
  <% } %>

  <div class="overflow-x-auto bg-white rounded-xl shadow">
    <table class="w-full text-sm">
      <thead class="bg-gray-100 text-gray-600 uppercase text-xs">
        <tr>
          <th class="px-6 py-3 text-left">Order ID</th>
          <th class="px-6 py-3 text-left">Buyer</th>
          <th class="px-6 py-3 text-left">Items</th>
          <th class="px-6 py-3 text-left">Total</th>
          <th class="px-6 py-3 text-left">Status</th>
          <th class="px-6 py-3 text-left">Created</th>
          <th class="px-6 py-3 text-left">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (orders.length === 0) { %>
          <tr>
            <td colspan="7" class="px-6 py-4 text-center text-gray-500">
              No orders found.
            </td>
          </tr>
        <% } else { %>
          <% orders.forEach(order => { %>
            <tr class="border-b hover:bg-gray-50">
              <td class="px-6 py-3 font-mono text-gray-800"><%= order._id %></td>
              <td class="px-6 py-3"><%= order.buyer?.name || "Unknown" %></td>
              <td class="px-6 py-3">
                <ul class="space-y-1">
                  <% order.items.forEach(item => { %>
                    <li>
                      <span class="font-medium"><%= item.product?.name %></span> 
                      x <%= item.quantity %> 
                      (<%= item.vendor?.shopName || item.vendor?.name || "Vendor" %>)
                    </li>
                  <% }) %>
                </ul>
              </td>
              <td class="px-6 py-3 font-semibold">â‚¹<%= order.totalAmount %></td>
              <td class="px-6 py-3">
                <% if (order.status === "placed") { %>
                  <span class="bg-yellow-100 text-yellow-700 text-xs px-2 py-1 rounded-full">Placed</span>
                <% } else if (order.status === "shipped") { %>
                  <span class="bg-blue-100 text-blue-700 text-xs px-2 py-1 rounded-full">Shipped</span>
                <% } else if (order.status === "delivered") { %>
                  <span class="bg-green-100 text-green-700 text-xs px-2 py-1 rounded-full">Delivered</span>
                <% } else { %>
                  <span class="bg-red-100 text-red-700 text-xs px-2 py-1 rounded-full">Cancelled</span>
                <% } %>
              </td>
              <td class="px-6 py-3 text-gray-500 text-xs"><%= order.createdAt.toDateString() %></td>
              <td class="px-6 py-3 space-x-2">
                <% if (order.status !== "shipped") { %>
                  <a href="/admin/orders/<%= order._id %>/status/shipped"
                     class="bg-blue-600 text-white px-3 py-1 rounded text-xs hover:bg-blue-700">
                    Mark Shipped
                  </a>
                <% } %>
                <% if (order.status !== "delivered") { %>
                  <a href="/admin/orders/<%= order._id %>/status/delivered"
                     class="bg-green-600 text-white px-3 py-1 rounded text-xs hover:bg-green-700">
                    Mark Delivered
                  </a>
                <% } %>
                <% if (order.status !== "cancelled") { %>
                  <a href="/admin/orders/<%= order._id %>/status/cancelled"
                     class="bg-red-600 text-white px-3 py-1 rounded text-xs hover:bg-red-700">
                    Cancel
                  </a>
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</section>
